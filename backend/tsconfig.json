{
  "compilerOptions": {
    "target": "ES2019",
    "module": "commonjs",
    "outDir": "dist",
    "rootDir": "src",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": false,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "noImplicitAny": false,
    "moduleResolution": "node",
    
  },
  "include": ["src/**/*"],
  "exclude": [
    "node_modules", 
    "dist",
    "src/controllers/analytics.controller.ts",
    "src/controllers/contribution.controller.ts",
    "src/controllers/leaderboard.controller.ts",
    "src/controllers/payment-management.controller.ts",
    "src/controllers/pickup-management.controller.ts",
    "src/controllers/tracking.controller.ts"
  ]
}

